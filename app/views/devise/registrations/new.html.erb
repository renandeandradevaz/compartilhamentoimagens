
<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => true %>

<style>

    .form-control{
       margin-top: 10px
    }

</style>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email' %>

  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Nome' %>

  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Senha' %>

  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirme sua senha' %>

  <%= f.submit :class => 'btn btn-lg btn-primary btn-block', :value => 'Criar conta' %>

  <br>  <br>

  <%= render "devise/shared/links" %>

<% end %>


