
<% if @usuario.errors.any? %>
      <% @usuario.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger">
          <%= msg %>
        </div>
      <% end %>
  <% end %>

<%= form_for(@usuario, :url => 'update', :class => 'form') do |f| %>

<div class="form-group">
 <%= f.label :nome %><br>
 <%= f.text_field :name, :class => 'form-control' %>
</div>

<div class="form-group">
 <%= f.label :atalho %><br>
 <%= f.text_field :atalho, :class => 'form-control' %>
</div>

<div class="form-group">
 <%= f.label(:title, "Informações pessoais") %> 
 <br>
 <%= f.text_area :informacoesPessoais, :class => 'form-control', rows: 10 %>
</div>

<%= f.submit :class => 'btn btn-primary', :value => 'Salvar' %>
  
<% end %>



